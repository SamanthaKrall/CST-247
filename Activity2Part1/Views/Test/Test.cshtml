@model List<Activity2Part1.Models.UserModel>

@{
    ViewBag.Title = "My App";
    Layout = "~/Views/Shared/_MyDefaultLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Test</title>
    <style>
        .label1 {
            font-size: 24px;
            font-family: Arial;
            text-align: center;
            font-weight: bold;
        }
        .label2 {
            text-align: left;
            font-weight: bold;
            font-size: 18px;
            font-family: Arial;
        }
        table{
            font-family: Arial;
            width: 80%;
            border: 1px solid;
            padding: 5px;
        }
        table th, table td {
            border: 1px solid;
            padding: 5px;
            text-align: center;
        }
        table tr:nth-child(even){
            background-color: grey;
        }
        table tr:nth-child(odd){
            background-color: dimgray;
        }
    </style>
</head>
<body>
    <div> 
        <h6>Test</h6>
        <div class="label1">
            @Html.Label("Welcome to Razor", new { @class = "label1" })
        </div> 
        <br />
        <div class="label2">
            @Html.Label("These are my customers", new { @class = "label2" })
        </div>
        <br /><br />
        <table style="width:80%">
            <tr>
                <th>Name</th>
                <th>Password</th>
                <th>Email Address</th>
                <th>Phone Number</th>
            </tr>
            @foreach(var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem  => user.Name)</td>
                    <td>@Html.DisplayFor(modelItem  => user.Password)</td>
                    <td>@Html.DisplayFor(modelItem  => user.Email)</td>
                    <td>@Html.DisplayFor(modelItem  => user.Phone)</td>
                </tr>
            }
        </table>
        <div>
            @Html.ActionLink("Refresh Page", "https://localhost:44343/Test")
        </div>
    </div>
</body>
</html>
